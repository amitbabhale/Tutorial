{
  "swagger": "2.0",
  "info": {
    "description": "This is a person service developed for zycus.",
    "version": "1.0.0",
    "title": "Person Service",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "amitbabhale@gmail.com"
    }
  },
  "host": "localhost",
  "basePath": "/persons",
  "tags": [
    {
      "name": "person",
      "description": "Everything about your Pets"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/person": {
      "post": {
        "tags": [
          "person"
        ],
        "summary": "Add a person",
        "description": "Add a person details",
        "operationId": "addPerson",
        "consumes": [
          "vnd.zycus.person+json"
        ],
        "produces": [
          "vnd.zycus.person+json",
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Person Object That need to be created",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Person"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "definitions": {
    "Person": {
      "required": [
        "name",
        "age",
        "address",
        "pincode",
        "state"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "address": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/address"
          }
        },
        "state": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "country": {
          "type": "string",
          "value": "India"
        },
        "age": {
          "type": "integer",
          "format": "int"
        },
        "id": {
          "type": "integer",
          "format": "int16"
        },
        "tag": {
          "type": "string"
        }
      }
    },
    "address": {
      "type": "object",
      "properties": {
        "line1": {
          "type": "string"
        },
        "line2": {
          "type": "string"
        },
        "line3": {
          "type": "string"
        }
      }
    },
    "Error": {
      "required": [
        "code",
        "message"
      ],
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}